generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String     @id @default(uuid())
  name          String
  age           Int
  emailAddress  String     @unique
  phoneNumber   String
  nationality   String
  adhaarNumber  String?
  contactName   String
  contactPhone  String
  relationship  String
  password      String
  location      Location?  // optional back-reference, no fields/references
}

model Location {
  id           String  @id @default(uuid())
  uid          String  @unique
  location     String
  destination  String?
  time         String
  safe         Boolean
  user         User     @relation(fields: [uid], references: [id]) // foreign key side
}
